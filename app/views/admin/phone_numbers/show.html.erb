<div class="container mt-5">
  <h4>電話番号詳細</h4>
  <div class="row">
    <div class="col text-right mb-3">
      <%= link_to "販売ステータス編集", edit_admin_phone_number_path(@phone_number), class: "text-info" %>
    </div>
    <table class="table table-borderless border">
      <tbody>
        <tr>
          <td>電話番号</td>
          <td><%= @phone_number.telephone_number %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @phone_number.sale_status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <h5 class="my-3">契約状況</h5>
  <table class="table table-hover">
    <thead>
      <th>ID</th>
      <th>会社名</th>
      <th>ステータス</th>
    </thead>
    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.id %></td>
          <td>
            <%= link_to admin_customer_path(contract.customer) do %>
              <%= contract.customer.company_name %>
            <% end %>
          </td>
          <td>
            <% if contract.is_under_contract == true %>
              契約中
            <% else %>
              解約済
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @contracts %>
</div>