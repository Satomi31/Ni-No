<div class="container my-5">
  <div class="row mt-3">
    <div class="col-7 border p-3 mx-auto bg-light">
      <h2 class="text-center pb-3 border-bottom">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field mb-2">
          <%= f.label "会社名" %><br />
          <%= f.text_field :company_name, placeholder: "◯◯株式会社", autofocus: true, class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, placeholder: "mail@example.com", autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label "郵便番号" %><br />
          <%= f.text_field :post_code, placeholder: "0000000", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label "住所" %><br />
          <%= f.text_field :address, placeholder: "東京都○○区△△ xx-x", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label "電話番号" %><br />
          <%= f.text_field :telephone_number, placeholder: "03-xxxx-xxxx", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label "担当者名" %><br />
          <div class="row">
            <div class="col">
              <%= f.text_field :last_name, placeholder: "(姓) 令和", class: "form-control" %>
            </div>
            <div class="col">
              <%= f.text_field :first_name, placeholder: "(名) 道子", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions my-3 border-bottom text-center pb-3">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="row mt-3">
        <div class="col bg-light mb-2">
          <h3 class="text-center">既に登録済みの方</h3>
        </div>
      </div>

      <div class="row">
        <div class="col text-center">
          <%= link_to "こちら", new_session_path(resource_name) %> からログインしてください。
        </div>
      </div>
    </dev>
  </div>
</div>