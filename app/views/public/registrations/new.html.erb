<div class="container my-5">
  <h2>新規会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-3">
      <div class="col-7">
        <div class="field">
          <%= f.label "会社名" %><br />
          <%= f.text_field :company_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %><br />
          <%= f.text_field :post_code, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "住所" %><br />
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "電話番号(ハイフンなし)" %><br />
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "ご担当者様名(姓)" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "ご担当者様名(名)" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions my-3">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mt-3">
    <div class="col-3 bg-light mb-2">
      <h3 class="text-center">既に登録済みの方</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-4 text-right">
      <%= link_to "こちら", new_session_path(resource_name) %> からログインしてください。
    </div>
  </div>
</dev>