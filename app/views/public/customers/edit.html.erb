<h4>会員情報編集ページ</h4>
<%= form_with model: @customer, url: information_path do |f| %>
  <table>
    <tr>
      <td><%= f.label "会社名" %></td>
      <td><%= f.text_field :company_name %></td>
    </tr>
    <tr>
      <td><%= f.label "郵便番号" %></td>
      <td><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <td><%= f.label "住所" %></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label "担当者氏名(姓)" %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td><%= f.label "担当者氏名(名)" %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.label "電話番号" %></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td><%= f.label "メールアドレス" %></td>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
  <%= f.submit "編集内容を保存" %>
<% end %>

<%= link_to '退会する', unsubscribe_path %>
