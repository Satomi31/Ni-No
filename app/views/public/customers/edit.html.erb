<div class="container mt-5">
  <h4>会員情報編集ページ</h4>
  <%= render 'public/shared/error_messages', resource: @customer %>
  <%= form_with model: @customer, url: information_path do |f| %>
    <table class="table table-borderless mt-3">
      <tr class="form-group">
        <td><%= f.label "会社名" %></td>
        <td><%= f.text_field :company_name, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label "郵便番号" %></td>
        <td><%= f.text_field :post_code, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label "住所" %></td>
        <td><%= f.text_area :address, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label "担当者氏名" %></td>
        <td><%= f.text_field :last_name, class: "form-control" %></td>
        <td><%= f.text_field :first_name, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label "電話番号" %></td>
        <td><%= f.text_field :telephone_number, class: "form-control" %></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label "メールアドレス" %></td>
        <td><%= f.text_field :email, class: "form-control" %></td>
      </tr>
    </table>
    <div class="col text-center">
      <%= f.submit "編集内容を保存", class: "btn btn-warning my-3" %>
    </div>
  <% end %>
  <div class="row text-center mb-5">
    <div class="col">
      <%= link_to '戻る', my_page_path, class: "text-success" %>
    </div>
    <div class="col">
      <%= link_to '退会する', unsubscribe_path, class: "text-danger" %>
    </div>
  </div>
</div>
